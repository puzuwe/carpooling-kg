<header class="navbar navbar-fixed-top navbar-default" role="banner">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('podorozhniki_main_homepage') }}">Podorozhniki</a>
        </div>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                {{ knp_menu_render('PodorozhnikiMainBundle:Builder:topMenu') }}

                <!-- Top navbar right -->
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li><a href="{{ url('fos_message_inbox') }}"><span class="glyphicon glyphicon-message-in"><</span><sup class="text-danger">{% if not fos_message_nb_unread() == 0 %}fos_message_nb_unread(){% endif %}</sup> </a></li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" href="#" role="button">

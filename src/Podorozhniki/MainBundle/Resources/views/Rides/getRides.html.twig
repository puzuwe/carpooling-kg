{% extends "::base.html.twig" %}

{% block title %}PodorozhnikiMainBundle:Rides:getRides{% endblock %}

{% block body %}
<h1>Welcome to the Rides:getRides page</h1>
    {% for ride in rides %}
<h1>Ride</h1>

<table class="record_properties">
    <tbody>
    <tr>
        <th>{{ ride.who.name }}</th>
        <td>{{ ride.user.firstname }}</td>
    </tr>
    <tr>
        <th>Departure</th>
        <td>{{ ride.departure }}</td>
    </tr>
    <tr>
        <th>Destination</th>
        <td>{{ ride.destination }}</td>
    </tr>
    <tr>
        <th>Departuretime</th>
        <td>{{ ride.departuretime|date('Y-m-d H:i:s') }}</td>
    </tr>
    <tr>
        <th>Departureanytime</th>
        <td>{{ ride.departureanytime }}</td>
    </tr>
    <tr>
        <th>Numberofseats</th>
        <td>{{ ride.numberofseats }}</td>
    </tr>
    <tr>
        <th>Oneseatcost</th>
        <td>{{ ride.oneseatcost }}</td>
    </tr>
    <tr>
        <th>Returndate</th>
        <td>{{ ride.returndate|date('Y-m-d H:i:s') }}</td>
    </tr>
    <tr>
        <th>Returnanytime</th>
        <td>{{ ride.returnanytime }}</td>
    </tr>
    <tr>
        <th>Id</th>
        <td>{{ ride.id }}</td>
    </tr>
    </tbody>
</table>
{% endfor %}
{% endblock %}

{% extends "::base.html.twig" %}
{% block body %}
    {#<div id="map-main"></div>#}
    <div class="form-search">
        <form class="form-inline" method="post" role="form">
            <div class="row">
                <div class="form-group col-sm-5 col-xs-9">
                    <div class="input-group input-group-lg">
                            <span class="input-group-addon"><img
                                        src="{{ asset('public/img/icons/letter_a.png') }}"></span>
                        <input type="text" class="form-control" autocomplete="on" id="search_departure"
                               placeholder="{{ 'Departure'|trans }}">
                    </div>
                </div>
                <div class="form-group col-sm-5 col-xs-9">
                    <div class="input-group input-group-lg">
                            <span class="input-group-addon"><img
                                        src="{{ asset('public/img/icons/letter_b.png') }}"></span>
                        <input type="text" class="form-control" autocomplete="on" id="search_destination"
                               placeholder="{{ 'Destination'|trans }}">
                    </div>
                </div>
                <div class="col-sm-2 col-xs-5">
                    <button class="btn btn-lg btn-danger">{{ 'search'|trans }}</button>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h3>Watch How It Works</h3>
        </div>
        <div class="col-md-4">
            <h3>Good Deals</h3>
        </div>
        <div class="col-md-4">
            <h3>Trust Safety & Insurance</h3>
        </div>
    </div>
{% endblock %}